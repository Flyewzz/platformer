{
  "configurations": [
    {
      "name": "Win32",
      "compilerPath": "${env:AppData}\\mips\\mips\\bin\\mipsel-none-elf-gcc.exe",
      "cStandard": "c17",
      "cppStandard": "c++20",
      "defines": [
        "__STDC_HOSTED__=0"
      ],
      "includePath": [
        "${workspaceFolder}/",    // Include current project folder
        "${workspaceFolder}/thirdparty/nugget/psyq/include",       // From your Makefile
        "${workspaceFolder}/thirdparty/nugget/psyq/lib",
        "${workspaceFolder}/thirdparty/nugget/common/crt0",
        "${workspaceFolder}/thirdparty/nugget/common/syscalls",
        "${workspaceFolder}/psyq-4_7-converted/include",
        "${workspaceFolder}/psyq/include"
      ],
      "intelliSenseMode": "gcc-x86"
    },
    {
      "name": "Linux",
      "compilerPath": "/usr/bin/mipsel-linux-gnu-gcc",
      "cStandard": "c17",
      "cppStandard": "c++20",
      "defines": [
        "__STDC_HOSTED__=0"
      ],
      "includePath": [
        "/usr/mipsel-linux-gnu/include",  // Include MIPS headers on Linux
        "/usr/local/mipsel-linux-gnu/include",
        "${workspaceFolder}/",    // Include current project folder
        "${workspaceFolder}/thirdparty/nugget/psyq/include",       // From your Makefile
        "${workspaceFolder}/thirdparty/nugget/psyq/lib",
        "${workspaceFolder}/thirdparty/nugget/common/crt0",
        "${workspaceFolder}/thirdparty/nugget/common/syscalls",
        "${workspaceFolder}/psyq-4_7-converted/include",
        "${workspaceFolder}/psyq/include"
      ],
      "intelliSenseMode": "gcc-x86"
    }
  ],
  "version": 4
}
